{
  "name": "malga",
  "version": "0.0.1",
  "description": "Node.js library for the Malga API",
  "repository": "git@github.com:plughacker/malga-node.git",
  "author": "Malga <engineer@malga.io>",
  "contributors": [
    "Leonardo Pinheiro <leonardo@malga.io>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plughacker/malga-node/issues"
  },
  "homepage": "https://github.com/plughacker/malga-node#readme",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "pnpm run lint"
    ]
  },
  "scripts": {
    "setup:husky": "husky install",
    "lint:check": "eslint --fix --ext .ts ./src",
    "format:check": "prettier --check \"./src/**/*.ts\"",
    "lint": "pnpm run lint:check && pnpm run format:check && prettier --write .",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "vitest",
    "test:ci": "vitest --run"
  },
  "dependencies": {
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  }
}
